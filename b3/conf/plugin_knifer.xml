<configuration plugin="knifer">
    <!-- levels (from weaponcontrol)
        0 : guest
        1 : user
        2 : regular
        20 : moderator
        40 : admin
        60 : fulladmin
        80 : senioradmin
        100 : superadmin
      -->

    <settings name="settings">
        <set name="enabled">1</set>
        <set name="minlevel">40</set>
        <set name="nbtop">5</set>
        <!-- From xlrstats conf file -->
        <set name="knifeid">12</set>
        <set name="knifefactor">2</set>
        <set name="challengeduration">240</set>
        <set name="db_table_hof">plugin_knifer_hof</set>
        <set name="db_map_name">map_name</set>
        <set name="db_playerid">player_id</set>
        <set name="db_score">score</set>
    </settings>
    <settings name="messages">
        <set name="knkills_5">^3$name ^4$score ^7knife kills!</set>
        <set name="knkills_10">Watch out,^3$name has ^4$score ^7knife kills!</set>
        <set name="knkills_15">^3$name ^4$score ^7knife kills, beware of ^4his^7/^6her ^7blade!</set>
        <set name="knkills_20">^4$score ^7kills : ^3$name ^7is a knife master!</set>
        <set name="knkills_25">^4$score ^7knife kills : ^3$name is a ^1butcher!</set>
        <set name="knkills_30">^4$score ^7knife kills : ^3$name stop your knife aimbot please :)</set>
        <set name="knkills_35">^4$score ^7knife kills ^2No way...</set>
        <set name="knkills_40">^3$name ^4$score ^7knife kills : Slicey is that you ?</set>
        <set name="knkills_45">^3$name ^4$score ^7knife kills : Yes it must be you...</set>
        <set name="knkills_50">^4$score ^7knife kills -> ^3$name ^7you sick freak!!!</set>
        <set name="knkills_55">^3$name : ^4Buffer Overflow ^7knife kills</set>
    </settings>
</configuration>
