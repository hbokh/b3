<configuration plugin="Nader">
    <!-- levels (from weaponcontrol)
        0 : guest
        1 : user
        2 : regular
        20 : moderator
        40 : admin
        60 : fulladmin
        80 : senioradmin
        100 : superadmin
      -->

    <settings name="settings">
        <set name="enabled">1</set>
        <set name="minlevel">40</set>
        <set name="nbtop">5</set>
        <!-- From xlrstats conf file -->
        <set name="hegrenadeid">25</set>
        <set name="nadefactor">2</set>
        <set name="challengeduration">240</set>
        <set name="db_table_hof">plugin_nader_hof</set>
        <set name="db_map_name">map_name</set>
        <set name="db_playerid">player_id</set>
        <set name="db_score">score</set>
    </settings>
    <settings name="messages">
        <set name="hekills_5">^3$name ^4$score ^7HE grenade kills!</set>
        <set name="hekills_10">Watch out,^3$name has ^4$score ^7HE grenade kills!</set>
        <set name="hekills_15">^3$name ^4$score ^7HE grenade kills, beware ^4his^7/^6her ^7nades!</set>
        <set name="hekills_20">^4$score ^7kills : ^3$name ^7is a grenade master!</set>
        <set name="hekills_25">^4$score ^7HE grenade kills : ^3$name is a ^1grinding machine!</set>
        <set name="hekills_30">^4$score ^7HE grenade kills : ^3$name stop your HE grenade aimbot please :)</set>
        <set name="hekills_35">^4$score ^7HE grenade kills ^2No way...</set>
        <set name="hekills_40">^3$name has ^4$score successful ^7HE grenade launches!!!</set>
        <set name="hekills_45">^3$name ^4$score ^7HE grenade kills.</set>
        <set name="hekills_50">^4$score ^7HE grenade kills -> ^3$name ^7you sick freak!!!</set>
        <set name="hekills_55">^3$name : ^4Buffer Overflow ^7HE grenade kills</set>
    </settings>
</configuration>
